<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_cardView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inquiry_cardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inquiry_user_number_textView"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/hintColor"
            app:layout_constraintLeft_toRightOf="@+id/inquiry_user_textView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/inquiry_user_textView" />

        <TextView
            android:id="@+id/inquiry_user_textView"
            android:layout_width="150dp"
            android:layout_height="19dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/hintColor"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/inquiry_time_textView"
            android:layout_width="140dp"
            android:layout_height="17dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:gravity="end"
            android:text="time"
            android:textColor="@color/hintColor"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/inquiry_date_textView" />


        <me.grantland.widget.AutofitTextView
            android:id="@+id/inquirydetail_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.06"
            android:maxLines="3"
            android:text="This is where we have the inquiries by users."
            android:textColor="@color/hintColor"
            app:layout_constraintLeft_toLeftOf="@+id/inquiry_user_textView"
            app:layout_constraintRight_toRightOf="@+id/inquiry_time_textView"
            app:layout_constraintTop_toBottomOf="@+id/inquiry_date_textView" />

        <TextView
            android:id="@+id/inquiry_date_textView"
            android:layout_width="150dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="date"
            android:textColor="@color/hintColor"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/inquiry_user_textView"
            app:layout_constraintTop_toBottomOf="@+id/inquiry_user_textView" />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>