<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/uploader_editText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="159dp"
        android:gravity="top"
        android:hint="Enter text here"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/uploader_imageView"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/image_icon"
        app:layout_constraintLeft_toLeftOf="@+id/uploader_editText"
        app:layout_constraintTop_toBottomOf="@+id/uploader_editText" />

    <TextView
        android:id="@+id/uploader_nameTextView"
        android:layout_width="208dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Name"
        app:layout_constraintLeft_toLeftOf="@+id/uploader_circleImageView"
        app:layout_constraintRight_toRightOf="@+id/uploader_circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/uploader_circleImageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/uploader_circleImageView"
        android:layout_width="75dp"
        android:layout_height="63dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/black"
        app:layout_constraintBottom_toTopOf="@+id/uploader_editText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/uploader_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/tick_round"
        app:layout_constraintRight_toRightOf="@+id/uploader_editText"
        app:layout_constraintTop_toBottomOf="@+id/uploader_editText" />
</android.support.constraint.ConstraintLayout>
